<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sampili.sampilinews.ThreeFragment">

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pk"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <ImageView

        android:id="@+id/img3"
        android:src="@drawable/pkalam"
        android:layout_below="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/inf4"
        android:text="Best View\nClick on the Top Right corner of the paper window"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:textAlignment="center"
        android:layout_below="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:text="Read This Paper"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:id="@+id/b3" />
</RelativeLayout>