<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sampili.sampilinews.EightFragment">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/t8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/aitorma"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>
    <ImageView

        android:id="@+id/img8"
        android:src="@drawable/aitormas"
        android:layout_below="@+id/t8"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/inf8"
        android:text="www.aitorma.in\nContact:+91 9436126649"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_below="@+id/img8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />


        <Button
            android:layout_marginTop="110dp"
            android:layout_below="@+id/inf8"
            android:id="@+id/b8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Read This Paper"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

</RelativeLayout>